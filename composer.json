{
    "name": "aluch/yml-generator",
    "description": "YML (Yandex Market Language) file generator",
    "keywords": ["yml", "yandex", "market", "yml-generator"],
    "homepage": "https://github.com/aluch/YmlGenerator",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Artem Luchnikov",
            "email": "artem@luchnikov.ru",
            "role": "Creator"
        }
    ],
    "support": {
        "email": "artem@luchnikov.ru",
        "issues": "https://github.com/aluch/YmlGenerator/issues"
    },
    "require": {
        "php": ">=8.0",
        "ext-simplexml": "*",
        "ext-xmlwriter": "*"
    },
    "require-dev": {
        "ext-dom": "*",
        "phpunit/phpunit": "^5.0",
        "fzaninotto/faker": "^1.6",
        "friendsofphp/php-cs-fixer": "^2.3",
        "escapestudios/symfony2-coding-standard": "^3.0",
        "phpcompatibility/php-compatibility": "^9.0",
        "dealerdirect/phpcodesniffer-composer-installer": "^0.7.1"
    },
    "autoload": {
        "psr-4": {
            "Aluch\\YmlGenerator\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Aluch\\YmlGenerator\\Tests\\": "tests/"
        }
    }
}
